#!/usr/bin/env bash

# change to the project root
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$DIR"/.. || exit

docker compose up -d pascalallen-postgres

docker compose up -d pascalallen-adminer

docker container run \
    --rm -it \
    -v "$(pwd)":/app \
    -w /app \
    -p 80:80 \
    --name pascalallen-air \
    --net pascalallen \
    --env-file .env \
    cosmtrek/air